{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "CMake Configure",
			"type": "shell",
			"command": "cmake -S . -B build -DENABLE_TESTS=ON",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Generated task by CMake"
		},
		{
			"label": "CMake Build",
			"type": "shell",
			"command": "cmake --build .",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Generated task by CMake"
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "ctest",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Run tests with CTest"
		}
	]
}
